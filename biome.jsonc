{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "extends": [
    "ultracite"
  ],
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "off",
        "useAwait": "off"
      },
      "style": {
        "useConsistentMemberAccessibility": "off",
        "useBlockStatements": "info",
        "noNestedTernary": "off",
        "noParameterProperties": "off"
      },
      "nursery": {
        "noAwaitInLoop": "off"
      }
    }
  }
}