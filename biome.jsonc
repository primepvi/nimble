{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "extends": ["ultracite"],
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "off",
        "useAwait": "off"
      },
      "style": {
        "useConsistentMemberAccessibility": "off",
        "useBlockStatements": "info",
        "noNestedTernary": "off"
      },
      "nursery": {
        "noAwaitInLoop": "off"
      }
    }
  }
}
